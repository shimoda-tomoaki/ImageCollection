<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shimoda_tomoaki.helloworld" >

    <!-- インターネット通信の許可 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FragmentActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".TopActivity"
            android:label="@string/title_activity_main_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InputCategory"
            android:label="@string/title_activity_input_category" >
        </activity>
        <activity
            android:name=".CategoryListActivity"
            android:label="@string/title_activity_category_list" >
        </activity>
    </application>

</manifest>
